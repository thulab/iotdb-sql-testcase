--8. 非关联EXISTS的子查询查询
--8.1 查询将返回所有员工的姓名，前提是他们的部门在 departments 表中存在
select name from employees
	where EXISTS (
		select 1 from departments 
			where departments.department_id = employees.department_id
);

--8.2 查找有订单的客户
select customer_name from customers
	where EXISTS (
		select 1 from orders
			where orders.customer_id = customers.customer_id
);

--8.3 检查特定客户的订单
select customer_id from orders
	where customer_id = 'C111000111' and EXISTS (
		select 1 from orders
		where customer_id = 'C111000111'
);

--8.4 检查是否存在特定条件的记录 
select order_amount from orders o1
	where EXISTS (
		select 1 from  orders o2
    WHERE o2.order_amount > 5000
    AND o1.order_id = o2.order_id
);


--8.5 使用 NOT EXISTS 找出没有员工的部门
select department_id, dep_name from departments
	where NOT EXISTS (
		select 1 from employees
			where employees.department_id = departments.department_id
);

select DISTINCT department_id, dep_name from departments
	where NOT EXISTS (
		select 1 from employees
			where employees.department_id = departments.department_id
);

--8.6 使用 EXISTS 找出有订单的客户
select customer_id, customer_name from customers
	where EXISTS (
		select 1 from orders
			where orders.customer_id = customers.customer_id
);


