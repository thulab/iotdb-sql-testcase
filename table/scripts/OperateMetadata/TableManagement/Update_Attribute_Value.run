show devices from table_attr where "城市" = 'beijing';
update table_attr set "维修周期" = substring("型号", 1, 2) where "维修周期" <> substring("型号", 1, 1) and "城市" = 'shanghai';
show devices from table_attr where "城市" = 'shanghai';
