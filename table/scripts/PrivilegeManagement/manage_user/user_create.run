--1. 用户名字符长度校验【4~32个字符】
create user use 'Pass@123456789';
<<SQLSTATE;
create user qwertyuiop1234567890qwertyuiop123 'Pass@123456789';
<<SQLSTATE;
create user usea 'Pass@123456789';
create user qwertyuiop1234567890qwertyuiop12 'Pass@123456789';

--2. 用户名支持英文大小写字母、数字、特殊字符（!@#$%^&*()_+-=）
create user USERA 'Pass@123456789';
create user userb 'Pass@123456789';
create user "1234" 'Pass@123456789';
create user "!@#$%^&*()_+-=" 'Pass@123456789';
create user USEab 'Pass@123456789';
create user USEab1 'Pass@123456789';
create user "USEab01!@#$%^&*()_+-=" 'Pass@123456789';

--3. 用户名不支持包含中文
create user "普通用户" 'Pass@123456789';
<<SQLSTATE;

--4. 用户名使用反引号、单引号、双引号以及不使用符号包裹
CREATE USER User!@#$%^&*()_001+-= 'Pass@123456789';
<<SQLSTATE;
CREATE USER 'User!@#$%^&*()_001+-=' 'Pass@123456789';
<<SQLSTATE;
CREATE USER `User!@#$%^&*()_001+-=` 'Pass@123456789';
<<SQLSTATE;
CREATE USER "User!@#$%^&*()_001+-=" 'Pass@123456789';

