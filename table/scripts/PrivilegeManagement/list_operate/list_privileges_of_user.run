// LIST PRIVILEGES OF USER <userName>
// 列出指定用户下所有权限


--0. 清理环境
connect root/TimechoDB@2021;
drop user user01;
<<NULL;
drop user user02;
<<NULL;


-- 1. root创建用户
create user user01 'pass123456789';
create user user02 'pass123456789';

--2. root列出用户列表
list user;


--3. 将权限赋予给普通用户,旧【MANAGE_ROLE】和【MANAGE_USER】统一为【SECURITY】
grant security to user user01;
list privileges of user user01;
list privileges of user root;

--4. 未授权的普通用户，列出相关列表信息
connect user02/pass123456789;
list privileges of user user02;
list privileges of user user01;
<<SQLSTATE;

--5. 已授权的普通用户，列出权限
connect user01/pass123456789;
list privileges of user user01;
list privileges of user user02;

--6. root用户授予普通用户user02权限,旧【MANAGE_ROLE】和【MANAGE_USER】统一为【SECURITY】
connect root/TimechoDB@2021;
grant security to user user02;

--7. 已授权的普通用户user02，列出用户拥有的权限列表
connect user02/pass123456789;
list privileges of user user02;
list privileges of user user01;

--8. root取消普通用户权限,旧【MANAGE_ROLE】和【MANAGE_USER】统一为【SECURITY】
connect root/TimechoDB@2021;
revoke security from user user01;
revoke security from user user02;

--9. 取消授权的普通用户,列出用户拥有的权限列表
connect user01/pass123456789;
list privileges of user user01;
list privileges of user user02;
<<SQLSTATE;

connect user02/pass123456789;
list privileges of user user02;
list privileges of user user01;
<<SQLSTATE;

-- 清理环境
connect root/TimechoDB@2021;
drop user user01;
<<NULL;
drop user user02;
<<NULL;
