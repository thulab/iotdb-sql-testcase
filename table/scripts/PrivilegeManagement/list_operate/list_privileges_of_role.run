// LIST PRIVILEGES OF ROLE <roleName>
// 列出指定角色下所有权限


--0. 清理环境
connect root/TimechoDB@2021;
drop user user01;
<<NULL;
drop user user02;
<<NULL;
drop role role01;
<<NUll;


-- 1. root创建用户和角色
create user user01 'pass123456789';
create user user02 'pass123456789';
create role role01;

--2. root列出用户列表和角色
list user;
<<CHECKCODE;
list role;

--3. 将权限赋予给角色,旧【MANAGE_ROLE】和【MANAGE_USER】统一为【SECURITY】
grant security to role role01;


--4. root 列出指定角色下所有权限列表
list privileges of role role01;

--5. root将角色role01赋予给普通用户user01
grant role role01 to user01;

--6. 未授权的普通用户，列出相关列表信息
connect user02/pass123456789;
list privileges of user user02;
list privileges of user user01;
<<SQLSTATE;
list privileges of role role01;
<<SQLSTATE;

--7. 已授权的管理角色的普通用户，列出权限
connect user01/pass123456789;
list privileges of user user01;
list privileges of user user02;
list privileges of role role01;

--8.root取消角色权限，旧【MANAGE_ROLE】和【MANAGE_USER】统一为【SECURITY】
connect root/TimechoDB@2021;
revoke security from role role01;
list privileges of role role01;

--9. 取消授权的角色关联的普通用户,列出用户拥有的权限列表
connect user01/pass123456789;
list privileges of user user01;
list privileges of user user02;
<<SQLSTATE;
list privileges of role role01;


-- 清理环境
connect root/TimechoDB@2021;
drop user user01;
<<NULL;
drop user user02;
<<NULL;
drop role role01;
<<NUll;