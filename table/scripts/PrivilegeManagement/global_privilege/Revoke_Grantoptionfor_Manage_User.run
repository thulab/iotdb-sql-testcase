alter user testuser2 set password 'Pass@123456789';
drop user testuser2;

--3.9 user02授予user03关于【MANAGE_USER】权限，V2.0.7.1统一为【SECURITY】权限
grant security to user user03;

--3.10 user03执行用户管理
connect user03/Pass@123456789;
list privileges of user user03;
create user testuser3 'Pass@123456789';
list user;

alter user testuser3 set password 'Pass@123456789';
drop user testuser3;

--4. 取消转授权限操作
 --4.1 user01对user02取消【MANAGE_USER】转授权限，V2.0.7.1统一为【SECURITY】权限
connect user01/Pass@123456789;
list privileges of user user01;
revoke grant option for security from user user02;

--4.2 user02对user03取消【MANAGE_USER】转授权限，V2.0.7.1统一为【SECURITY】权限
connect user02/Pass@123456789;
