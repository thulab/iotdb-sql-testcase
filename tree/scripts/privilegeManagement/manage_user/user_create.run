//三、创建同名用户
--0.清理环境
DROP USER user01;
<<NULL;

--1.创建用户
CREATE USER user01 'pass123456789';

--2.创建同名用户
CREATE USER user01 'passwd';
<<SQLSTATE;

--3.创建与管理员同名的用户
CREATE USER root 'pass123456789';
<<SQLSTATE;

--4. 清理环境
DROP USER user01;
<<NULL;

//四、双引号、单引号、反引号使用

--0. 清理环境
DROP USER `abcd`;
<<NULL;
DROP USER user01;
<<NULL;
DROP USER user02;
<<NULL;

--1. 创建用户
create user "abcd" 'pass123456789';
