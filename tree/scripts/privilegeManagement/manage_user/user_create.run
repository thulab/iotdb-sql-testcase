<<SQLSTATE;
CREATE USER user01 'Pass@1234567';
CREATE USER user02 'Pass12345678900123456789qwert@12';
CREATE USER user03 'Pass12345678900123456789qwert@123';
<<SQLSTATE;

--2.包含大小写字母
CREATE USER user04 'qwertyuiopABC';
<<SQLSTATE;

--3.包含数字
