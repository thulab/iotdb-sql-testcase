connect root/TimechoDB@2021;
// 1. grant extend_template, read, write to user_extend_base with grant option, 使用user_extend_base操作
// 2. grant extent_template to user_trans
// 3. grant write_schema to user_trans
// 4. grant write_data to user_trans
// 5. grant read_schema to user_trans
// 6. grant read_data to user_trans

-- 清理
drop database root.**;
<<NULL;
drop schema template t1;
<<NULL;
DROP USER user_extend_base;
<<NULL;
DROP USER user_trans;
<<NULL;

-- prepare
// 1. grant extend_template, read, write to user_extend_base with grant option, 使用user_extend_base操作
-- 创建用户并授权
CREATE USER user_extend_base 'pass123456789';
GRANT extend_template ON root.** TO USER user_extend_base with grant option;
GRANT read,write ON root.sg.** TO USER user_extend_base with grant option;
LIST PRIVILEGES OF USER user_extend_base;

CREATE USER user_trans 'pass123456789';
LIST PRIVILEGES OF USER user_trans;

-- 创建数据库
create database root.sg;
create database root.sg1;

-- 创建模版
create schema template t1 (s_name TEXT, s_status BOOLEAN, start_time INT64, s_lat FLOAT encoding=Gorilla, s_lon FLOAT encoding=Gorilla);
-- 挂载
set schema template t1 to root.sg;
set schema template t1 to root.sg1;
-- 激活
create timeseries of schema template on root.sg.d1;

-- 查看模版下定义的序列列表
show nodes in schema template t1;



// 2. grant extend_template to user_trans
connect user_extend_base/pass123456789;
grant extend_template on root.** to user user_trans;

connect user_trans/pass123456789;
LIST PRIVILEGES OF USER user_trans;

-- write_schema 权限
-- 激活
create timeseries of schema template on root.sg.d2;
<<SQLSTATE;
create timeseries using schema template on root.sg.d3;
<<SQLSTATE;
-- 解除
deactivate schema template t1 from root.sg.d1;
<<SQLSTATE;
-- 写入激活
insert into root.sg.d4(time, s_name, s_status, s_lat, s_lon) values (11, 'brown', true, 23.5, 1435.11);
<<SQLSTATE;
-- 路径外写入激活
insert into root.sg1.d4(time, s_name, s_status, s_lat, s_lon) values (12, 'brown', true, 213.5, 185.11);
<<SQLSTATE;


-- write_data 权限
insert into root.sg.d1(time, s_name, s_status, start_time, s_lat, s_lon) values (1, 'arrow', true, 1697167800000, 3.5, 435.67);
<<SQLSTATE;

-- extend template 权限
insert into root.sg.d1(time, s_lon2) values (1, 109.36);
<<SQLSTATE;

-- read_schema 权限
-- 判断节点是否使用了模版
show child nodes root.sg.d1;
-- 查看已激活的节点
show paths using schema template t1;

-- read_data 权限
select * from root.sg.** align by device;
select * from root.sg.**;





// 3. grant write_schema to user_trans
connect user_extend_base/pass123456789;
grant write_schema on root.sg.** to user user_trans;

connect user_trans/pass123456789;
LIST PRIVILEGES OF USER user_trans;


-- write_schema 权限
-- 激活
create timeseries of schema template on root.sg.d2;
create timeseries using schema template on root.sg.d3;
-- 解除
deactivate schema template t1 from root.sg.d2;
deactivate schema template t1 from root.sg.d3;
-- 写入激活
insert into root.sg.d4(time, s_name, s_status, s_lat, s_lon) values (11, 'brown', true, 23.5, 1435.11);
<<SQLSTATE;
-- 路径外写入激活
insert into root.sg1.d4(time, s_name, s_status, s_lat, s_lon) values (12, 'brown', true, 213.5, 185.11);
<<SQLSTATE;


-- write_data 权限
insert into root.sg.d1(time, s_name, s_status, start_time, s_lat, s_lon) values (1, 'arrow', true, 1697167800000, 3.5, 435.67);
<<SQLSTATE;

-- extend template 权限
insert into root.sg.d1(time, s_lon2) values (1, 109.36);
<<SQLSTATE;

-- read_schema 权限
-- 判断节点是否使用了模版
show child nodes root.sg.d1;
-- 查看已激活的节点
show paths using schema template t1;

-- read_data 权限
select * from root.sg.** align by device;
select * from root.sg.**;






// 4. grant write_data to user_trans
connect user_extend_base/pass123456789;
grant write_data on root.sg.** to user user_trans;

connect user_trans/pass123456789;
LIST PRIVILEGES OF USER user_trans;

-- write_schema 权限
-- 激活
create timeseries of schema template on root.sg.d2;
create timeseries using schema template on root.sg.d3;

-- 解除
deactivate schema template t1 from root.sg.d2;
deactivate schema template t1 from root.sg.d3;

-- 写入激活
insert into root.sg.d4(time, s_name, s_status, s_lat, s_lon) values (11, 'brown', true, 23.5, 1435.11);
-- 路径外写入激活
insert into root.sg1.d4(time, s_name, s_status, s_lat, s_lon) values (12, 'brown', true, 213.5, 185.11);
<<SQLSTATE;


-- write_data 权限
insert into root.sg.d1(time, s_name, s_status, start_time, s_lat, s_lon) values (14, 'arrow', true, 1697167800000, 43.5, 434.44);

-- extend template 权限
insert into root.sg.d1(time, write_data) values (14, 109.36);

-- read_schema 权限
-- 判断节点是否使用了模版
show child nodes root.sg.d1;
-- 查看已激活的节点
show paths using schema template t1;

-- read_data 权限
select start_time,s_lat,write_data,s_status,s_name,s_lon from root.sg.**;
select start_time,s_lat,write_data,s_status,s_name,s_lon from root.sg.** align by device;




// 5. grant read_schema to user_trans
connect user_extend_base/pass123456789;
grant read_schema on root.sg.** to user user_trans;

connect user_trans/pass123456789;
LIST PRIVILEGES OF USER user_trans;


-- read_schema 权限
-- 判断节点是否使用了模版
show child nodes root.sg.d1;
-- 查看已激活的节点
show paths using schema template t1;

-- read_data 权限
select start_time,s_lat,write_data,s_status,s_name,s_lon from root.sg.**;
select start_time,s_lat,write_data,s_status,s_name,s_lon from root.sg.** align by device;






// 6. grant read_data to user_trans
connect user_extend_base/pass123456789;
grant read_data on root.sg.** to user user_trans;

connect user_trans/pass123456789;
LIST PRIVILEGES OF USER user_trans;


-- read_schema 权限
-- 判断节点是否使用了模版
show child nodes root.sg.d1;
-- 查看已激活的节点
show paths using schema template t1;

-- read_data 权限
select * from root.sg.** align by device;
select * from root.sg.**;

-- 仅root拥有权限
-- 查看所有模版
show schema templates;
<<SQLSTATE;
-- 查看模版下定义的序列列表
show nodes in schema template t1;
<<SQLSTATE;
-- 查看挂载的节点
show paths set schema template t1;
<<SQLSTATE;
-- 挂载
set schema template t1 to root.sg2;
<<SQLSTATE;
-- 卸载
unset schema template t1 from root.sg;
<<SQLSTATE;
-- 创建模版
create schema template t2 aligned (s_lat FLOAT encoding=Gorilla, s_lon FLOAT encoding=Gorilla);
<<SQLSTATE;
