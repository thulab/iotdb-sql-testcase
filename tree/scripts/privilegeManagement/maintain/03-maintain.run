connect root/TimechoDB@2021;

-- prepare
DROP USER user_maintain;
<<NULL;

-- 创建用户并授权
CREATE USER user_maintain 'pass123456789';
GRANT SYSTEM ON root.** TO USER user_maintain;
LIST PRIVILEGES OF USER user_maintain;

-- 换用户
connect user_maintain/pass123456789;

-- 无需授权
show version;
<<CHECKCODE;

-- 1. maintain
show cluster;
<<CHECKCODE;
show cluster details;
<<CHECKCODE;
show activation;
<<CHECKCODE;
show variables;
SHOW QUERY PROCESSLIST;
<<CHECKCODE;
kill all queries;

-- 2.仅root用户拥有的权限: root 用户
show regions;
<<CHECKCODE;
show schema regions;
<<CHECKCODE;
show data regions;
<<CHECKCODE;
flush;
clear cache;
--【2024年2月5日，由于手动合并命令会导致性能问题，故移除掉】
--merge;
--<<SQLSTATE;
set system to readonly;
set system to running;
load configuration;
<<SQLSTATE;
show confignodes;
show datanodes;

-- 清理
connect root/TimechoDB@2021;
drop user user_maintain;
